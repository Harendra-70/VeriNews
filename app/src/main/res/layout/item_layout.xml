<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Left side: Textual content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <!-- Title -->
            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News Title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Source (NEW) -->
            <TextView
                android:id="@+id/newsSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source: CNN"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="2dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/newsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short description of the article goes here..."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <!-- Author -->
            <TextView
                android:id="@+id/newsAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author Name"
                android:textSize="12sp"
                android:textColor="?attr/authorTextColor"
                android:layout_marginTop="6dp" />

            <!-- Published At -->
            <TextView
                android:id="@+id/newsPublishedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published at: Aug 5, 2025"
                android:textSize="12sp"
                android:textColor="?attr/authorTextColor"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Right side: Image -->
        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/news"
            android:contentDescription="@string/news_image" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


